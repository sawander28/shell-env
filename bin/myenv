#!/bin/sh

. ~/lib/functions.sh

envdir=${XDG_RUNTIME_DIR}/env

[ -d $envdir ] || mkdir -p $envdir

envvar(){
  export "${1}=${2}"
  printf '%s'  "$2" > "${envdir}/${1}"
}

envvar XDG_RUNTIME_DIR          "$XDG_RUNTIME_DIR"
envvar DBUS_SESSION_BUS_ADDRESS "$DBUS_SESSION_BUS_ADDRESS"
envvar WAYLAND_DISPLAY          "$WAYLAND_DISPLAY"
envvar DISPLAY                  "$DISPLAY"
envvar SWAYSOCK                 "$SWAYSOCK"

envvar XDG_SESSION_DESKTOP      "$XDG_SESSION_DESKTOP"
envvar XDG_SESSION_TYPE         "$XDG_SESSION_TYPE"
