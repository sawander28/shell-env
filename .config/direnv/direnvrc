# direnvrc

. ~/lib/colors.sh
. ~/lib/functions.sh
#. ~/lib/helpers.sh
#. ~/lib/path.sh

prepend_path(){
  case ":$PATH:" in
    *":$1:"*) ;;
           *) PATH="$1${PATH:+:$PATH}";;
  esac
}

err(){
  errstr $?
}

myip(){
  curl ipinfo.io/ip
}

curltls(){
  curl --proto '=https' --tlsv1.2 -sSf "${@}"
}

checktor(){
  curl -socks5 -L 127.0.0.1:9050 "$@"
}

genpwd {
  openssl rand -base64 48
}

